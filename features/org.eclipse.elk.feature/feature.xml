<feature
      id="org.eclipse.elk.feature"
      label="Eclipse Layout Kernel (Incubation) - Core Components"
      version="0.1.0.qualifier"
      provider-name="Eclipse Layout Kernel"
      plugin="org.eclipse.elk.core">

   <description url="http://www.eclipse.org/elk">
      The Eclipse Layout Kernel provides automatic layout to diagram
editors and viewers. It provides a layout graph format and an
infrastructure that editors / viewers on one side and layout
algorithms on the other side can connect to. The Eclipse Layout
Kernel also provides layout algorithms.
   </description>

   <copyright>
      Copyright (c) 2008 Kiel University and others.

All rights reserved. This program and the accompanying materials
are made available under the terms of the Eclipse Public License
v1.0 which accompanies this distribution, and is available at
http://www.eclipse.org/legal/epl-v10.html.
   </copyright>

   <license url="%licenseURL">
      %license
   </license>

   <requires>
      <import plugin="com.google.guava" version="15.0.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.emf.edit" version="2.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.ecore" version="2.5.0" match="greaterOrEqual"/>
      <import plugin="com.google.inject" version="3.0.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.eclipse.elk.alg.layered"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.eclipse.elk.alg.mrtree"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
